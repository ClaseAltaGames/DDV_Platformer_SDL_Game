		<frame x="35" y="16" w="16" h="16" />
		<frame x="51" y="17" w="16" h="16" />
	  </animation>
	 
	  <animation name="playerL" loop="true" speed="0.2f">
		<frame x="98" y="82" w="16" h="16" />
